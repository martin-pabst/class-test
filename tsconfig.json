{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "outDir": "htdocs/js",

    "noUnusedLocals": false,
    "noImplicitReturns": false,
    "noUnusedParameters": false
  },
  "include": ["src"]
}
